		--with-mpfr-lib=$(INSTALL_DIR)/deps/lib \
		--with-isl-include=$(INSTALL_DIR)/deps/include \
		--with-isl-lib=$(INSTALL_DIR)/deps/lib \
		--enable-lib32 \
		--disable-lib64 \
		--enable-languages=c,c++ \
		--enable-c99 \
		--enable-long-long \
		--enable-checking \
		--enable-nls \
		--enable-static \
		--disable-threads \
		--disable-shared \
		$(CONFIGURE_LIBSTDCXX) \
		--with-headers=yes \
		--with-newlib=yes \
		--enable-mingw-wildcard \
		--enable-newlib-elix-level=3 \
