$(ISL_SRCDIR): $(ISL_PACKAGE)
	tar xf $<

stamps/build-gmp: $(GMP_SRCDIR)
	rm -rf $@ $(notdir $@)
	mkdir $(notdir $@)
	cd $(notdir $@) && $</configure \
		--prefix=$(INSTALL_DIR)/deps \
		$(CONFIGURE_HOST) \
		--disable-assembly \
		--enable-static \
		--disable-shared \
		CFLAGS="-O2" \
		CXXFLAGS="-O2" \
		LDFLAGS="-s"
	$(MAKE) -C $(notdir $@)
	$(MAKE) -C $(notdir $@) install
	mkdir -p $(dir $@) && touch $@

stamps/build-isl: $(ISL_SRCDIR) stamps/build-gmp
	rm -rf $@ $(notdir $@)
	mkdir $(notdir $@)
	cd $(notdir $@) && $</configure \
		--prefix=$(INSTALL_DIR)/deps \
		$(CONFIGURE_HOST) \
		--enable-static \
		--disable-shared \
		--with-gmp-prefix=$(INSTALL_DIR)/deps \
		CFLAGS="-O2" \
